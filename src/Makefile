#------------------------------------------------------------------------------
# all:
#------------------------------------------------------------------------------

all:		nre_main nre_list nre_curses
		gcc $(CFLAGS) nre_main.o nre_list.o nre_curses.o $(LFLAGS) -o ../bin/nre
		rm -f *.o

#------------------------------------------------------------------------------
# nre_main:
#------------------------------------------------------------------------------

nre_main:	nre_main.o
		gcc $(CFLAGS) -c nre_main.c

#------------------------------------------------------------------------------
# nre_list:
#------------------------------------------------------------------------------

nre_list:	nre_list.o
		gcc $(CFLAGS) -c nre_list.c

#------------------------------------------------------------------------------
# nre_curses:
#------------------------------------------------------------------------------

nre_curses:	nre_curses.o
		gcc $(CFLAGS) -c nre_curses.c

#------------------------------------------------------------------------------
# clean:
#------------------------------------------------------------------------------

clean:
		rm -f *.o
		rm -f ../bin/nre

#------------------------------------------------------------------------------
# install:
#------------------------------------------------------------------------------

install:
		mkdir -p $(bin-dir)
		install -m755 ../bin/nre $(bin-dir)
