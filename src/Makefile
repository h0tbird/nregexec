#------------------------------------------------------------------------------
# all:
#------------------------------------------------------------------------------

all:		nre_main
		gcc $(CFLAGS) nre_main.o $(LFLAGS) -o ../bin/nre
		rm -f *.o

#------------------------------------------------------------------------------
# nre_main:
#------------------------------------------------------------------------------

nre_main:	nre_main.o
		gcc $(CFLAGS) -c nre_main.c

#------------------------------------------------------------------------------
# clean:
#------------------------------------------------------------------------------

clean:
		rm -f *.o
		rm -f ../bin/nre

#------------------------------------------------------------------------------
# install:
#------------------------------------------------------------------------------

install:
		mkdir -p $(bin-dir)
		install -m755 ../bin/nre $(bin-dir)
